<v:EventWindowBase x:Class="Client.EventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:Client"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        DataContext="{Binding RelativeSource={RelativeSource Self}, Path=ViewModel}"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Title="Person"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="16,4,16,4"/>
        </Style>
        <Style TargetType="{x:Type xctk:WatermarkTextBox}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <StackPanel Margin="10">
        <xctk:WatermarkTextBox Text="{Binding EventName}" Watermark="Name" />
        <xctk:WatermarkTextBox Text="{Binding DateNTime}" Watermark="Date and Time" Margin="0,10,0,0"/>
        <xctk:WatermarkTextBox Text="{Binding EventFrequency}" Watermark="Frequency" Margin="0,10,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Command="{Binding Ok}" Content="OK"/>
            <Button Command="{Binding Cancel}" Content="Cancel" Margin="10,0,0,0"/>
        </StackPanel>
    </StackPanel>
</v:EventWindowBase>
