<Window x:Class="TaskClient.Views.TaskView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:TaskClient.ViewModel"
        mc:Ignorable="d"
        Title="Задача" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:TaskViewModel/>
    </Window.DataContext>
    <StackPanel  Margin="5,10,5,5" Orientation="Vertical">
        <StackPanel Margin="5,10,5,5" Orientation="Horizontal">
            <TextBlock Name="TextBlock1" Text="Статус" Height="30" Width="300" HorizontalAlignment="Left"
                       Margin="0,0,5,0" Padding="16,4,16,4"></TextBlock>
            <TextBlock Name="TextBlock2" Text="{Binding State}" Height="30" Width="220" HorizontalAlignment="Right"
                        Margin="5,0,5,0" Padding="16,4,16,4" ></TextBlock>
        </StackPanel>
        <StackPanel Margin="5,10,5,5" Orientation="Horizontal">
            <TextBlock Name="TextBlock3" Text="Имя задачи" Height="30" Width="300" HorizontalAlignment="Left"
                       Margin="0,0,5,0" Padding="16,4,16,4"></TextBlock>
            <TextBox Name="TextBlock4" Text="{Binding Name}" Height="30" Width="220" HorizontalAlignment="Right"
                        Margin="5,0,5,0" Padding="16,4,16,4" ></TextBox>
        </StackPanel>
        <StackPanel Margin="5,10,5,5" Orientation="Horizontal">
            <TextBlock Name="TextBlock5" Text="Описание задачи" Height="30" Width="300" HorizontalAlignment="Left"
                       Margin="0,0,5,0" Padding="16,4,16,4"></TextBlock>
            <TextBox Name="TextBlock6" Text="{Binding Description}" Height="30" Width="220"
                        Margin="5,0,5,0" Padding="16,4,16,4"></TextBox>
        </StackPanel>
        <StackPanel Margin="5,10,5,5" Orientation="Horizontal">
            <TextBlock Name="TextBlock7" Text="Имя исполнителя задачи" Height="30" Width="300" HorizontalAlignment="Left"
                       Margin="0,0,5,0" Padding="16,4,16,4"></TextBlock>
            <TextBlock Name="TextBlock8" Text="{Binding ExecutorName}" Height="30" Width="220" HorizontalAlignment="Right"
                        Margin="5,0,5,0" Padding="16,4,16,4" ></TextBlock>
        </StackPanel>
        <StackPanel Margin="5,10,5,5" Orientation="Horizontal">
            <TextBlock Name="TextBlock9" Text="Фамилия исполнителя задачи" Height="30" Width="300" HorizontalAlignment="Left"
                       Margin="0,0,5,0" Padding="16,4,16,4"></TextBlock>
            <TextBlock Name="TextBlock10" Text="{Binding ExecutorSurname}" Height="30" Width="250" HorizontalAlignment="Right"
                        Margin="5,0,5,0" Padding="16,4,16,4" ></TextBlock>
        </StackPanel>
        <StackPanel Margin="5,10,5,5" Orientation="Horizontal">
            <TextBlock Name="TextBlock11" Text="Тэги" Height="30" Width="300" HorizontalAlignment="Left"
                       Margin="0,0,5,0" Padding="16,4,16,4"></TextBlock>
            <TextBox Name="TextBlock12" Text="{Binding TagName}" Height="30" Width="250" HorizontalAlignment="Right"
                        Margin="5,0,5,0" Padding="16,4,16,4" ></TextBox>
        </StackPanel>
        <StackPanel Margin="5,10,5,5" Orientation="Vertical" Height="150">
            <StackPanel Orientation="Horizontal"  Width="170" HorizontalAlignment="Right" Margin="10,8,10,10" >
                <Button x:Name="btnOk" Content="ОК" Click="btnOk_Click" Width="80" Margin="5,0,5,0" IsDefault="True"/>
                <Button x:Name="btnCancel" Content="Назад" Click="btnCancel_Click"  Height="25" Width="80" Margin="0,0,5,0" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
