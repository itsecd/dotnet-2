<Window x:Class="TaskClient.Views.TaskView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskClient.Views"
        xmlns:viewModels="clr-namespace:TaskClient.ViewModel"
        mc:Ignorable="d"
        Title="Задача" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:TaskViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel  Margin="5,10,5,5" Orientation="Vertical">
            <StackPanel Margin="5,10,5,5" Orientation="Horizontal">
                <TextBlock Name="TextBlock3" Text="Имя задачи" Height="30" Width="300" HorizontalAlignment="Left"
                       Margin="0,0,5,0" Padding="16,4,16,4"></TextBlock>
                <TextBlock Name="TextBlock4" Text="{Binding Name}" Height="30" Width="220" HorizontalAlignment="Right"
                        Margin="5,0,5,0" Padding="16,4,16,4" ></TextBlock>
            </StackPanel>
            <StackPanel Margin="5,10,5,5" Orientation="Horizontal">
                <TextBlock Name="TextBlock5" Text="Описание задачи" Height="30" Width="300" HorizontalAlignment="Left"
                       Margin="0,0,5,0" Padding="16,4,16,4"></TextBlock>
                <TextBlock Name="TextBlock6" Text="{Binding Description}" Height="30" Width="220"
                        Margin="5,0,5,0" Padding="16,4,16,4" />
            </StackPanel>
            <StackPanel Margin="5,10,5,5" Orientation="Horizontal">
                <TextBlock Name="TextBlock7" Text="Имя исполнителя задачи" Height="30" Width="300" HorizontalAlignment="Left"
                       Margin="0,0,5,0" Padding="16,4,16,4"></TextBlock>
                <TextBox Name="TextBlock8" Text="{Binding ExecutorName}" Height="30" Width="220" HorizontalAlignment="Right"
                        Margin="5,0,5,0" Padding="16,4,16,4" ></TextBox>
            </StackPanel>
            <StackPanel Margin="5,10,5,5" Orientation="Horizontal">
                <TextBlock Name="TextBlock9" Text="Фамилия исполнителя задачи" Height="30" Width="300" HorizontalAlignment="Left"
                       Margin="0,0,5,0" Padding="16,4,16,4"></TextBlock>
                <TextBox Name="TextBlock10" Text="{Binding ExecutorSurname}" Height="30" Width="250" HorizontalAlignment="Right"
                        Margin="5,0,5,0" Padding="16,4,16,4" ></TextBox>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
