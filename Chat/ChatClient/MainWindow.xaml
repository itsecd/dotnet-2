<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Chat" Height="450" Width="800">
    <Grid>
        <Border Name="LoginScreen" Visibility="Visible" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Авторизация" HorizontalAlignment="Center" Margin="0,0,0,30" FontSize="20" />
                <TextBox Name="LoginBox" materialDesign:HintAssist.Hint="Введите логин"/>
                <PasswordBox Name="PasswordBox" materialDesign:HintAssist.Hint="Введите логин"/>
                <Button Content ="Enter" Name="LoginButton" Margin="0,30,0,0" Click="LoginButton_Click" IsDefault="True"/>
                <TextBlock Name="LoginMessageBlock" Visibility="Hidden"/>
                <Button Content ="Register" Name="RegisterButton" Click="RegisterButton_Click" IsDefault="True"/>

            </StackPanel>
        </Border>

    </Grid>




</Window>
