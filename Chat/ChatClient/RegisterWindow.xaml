<Window x:Class="ChatClient.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="RegisterWindow" Height="450" Width="800">
    <Grid>
        <Border Name ="RegisterScreen" Visibility="Visible" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Регистрация" Margin="0,0,0,30" HorizontalAlignment="Center" FontSize="20"/>
                <TextBox Name="RegLoginBox" materialDesign:HintAssist.Hint="Введите логин" />
                <PasswordBox Name="RegPasswordBox" materialDesign:HintAssist.Hint="Введите пароль"/>
                <PasswordBox Name="Reg2PasswordBox" materialDesign:HintAssist.Hint="Повторите пароль"/>
                <Button Content ="Зарегистрироваться" Name="RegLoginButton"  Margin ="0,30,0,0 " Click="RegisterButton_Click" IsDefault="True"/>
                <TextBlock Name="RegisterMessageBlock" Visibility="Hidden"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
